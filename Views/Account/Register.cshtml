@model easy_shop.Models.RegisterViewModel

@{
    ViewData["Title"] = "Ro'yhatdan o'tish";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}

<div class="form">
    <h2>Ro'yhatdan o'tish</h2>

    <form asp-action="Register" method="post">
        <fieldset>
            <div>
                <label asp-for="Email" class="form-label mt-4"></label>
                <input asp-for="Email" class="form-control" placeholder="Email" />
                <span asp-validation-for="Email"></span>
            </div>

            <div>
                <label asp-for="Password" class="form-label mt-4">Parol</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Parol" />
                <span asp-validation-for="Password"></span>
            </div>

            <div>
                <label asp-for="ConfirmPassword" class="form-label mt-4">Parolni tasdiqlang</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Parolni takrorlang" />
                <span asp-validation-for="ConfirmPassword"></span>
            </div>

            <button type="submit" class="btn btn-primary mt-3 mb-3" style="width: 100%;">Ro'yhatdan o'tish</button>
        </fieldset>
    </form>

    <div>
        Akaunt bormi? <a asp-action="Login">Kirish</a>
    </div>
</div>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
