@model IEnumerable<Order>

@{
    ViewData["Title"] = "Buyurtmalar ro‘yxati";
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
}

<h2>Yetkazilishi kerak bo'lagan buyurtmalar</h2>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Buyurtma ID</th>
            <th>Narx</th>
            <th>Buyurtma sanasi</th>
            <th>Manzil</th>
            <th>To'lov turi</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.TotalPrice.ToString("N0")</td>
                <td>@order.OrderDate</td>
                <td>
                    <a href='https://www.google.com/maps/place/@order.Location.Split(", ")[0]+@order.Location.Split(", ")[1]'>
                        Yetkazish manzili
                    </a>
                </td>
                <td>@order.PaymentStatus</td>
                <td><button class="btn btn-success" onclick="location.href='@Url.Action("UpdateStatus", "Admin")/@order.Id/Yetkazildi'">Yetkazildi</button></td>
            </tr>
        }
    </tbody>
</table>