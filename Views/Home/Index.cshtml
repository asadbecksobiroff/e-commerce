@{
    ViewData["Title"] = "EasySHOP - O'zbekistonning yetakchi elektron do'koni";
}

<div class="hero-carousel">
    <img id="carousel-image" class="carousel-image" src="~/images/banner/laptops.jpg" alt="Mahsulotlar">
    <div class="carousel-nav" id="carousel-nav"></div>
</div>

<h2 style="margin-bottom: 20px; color: var(--dark); font-size: 24px;">Kategoriyalar</h2>

<div class="products-grid">
    <div class="product-card" data-category="telefonlar" onclick="location.href='@Url.Action("phone", "Category")'">
        <img src="~/images/category/phone.jpg" alt="Telefonlar" class="product-image">
        <div class="product-info">
            <div class="product-category">Elektronika</div>
            <h3>Telefonlar</h3>
        </div>
    </div>

    <div class="product-card" data-category="kompyuterlar" onclick="location.href='@Url.Action("laptop", "Category")'">
